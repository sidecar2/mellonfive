
<section id="content_wrap">

	<header id="melon"><img src="/assets/logo.png"> </header>

<section class="main_wrap">
<h2 class="question"> I concentrate best while </h2>

		<%= render 'form' %>
<div style="clear:both"></div>
<div id="copy"> Use Melon and learn more about yourself in your everyday life. </div>

</section>
<div id="tag_cloud">
		 
			<div class="item_wrap personal_entry">
<% @newtags.each do |newtag| %>
			
			<div class="item w16"> <%= newtag.tag_list%> </div>
			<span class="tag_name"> <p>   Your Entry <p> </span>
<% end %>
		</div>

<% tag_cloud Post.tag_counts, %w[w1 w2 w3 w4 w5 w6 w7 w8 w9 w10 w11 w12 w13 w14 w15 w16 w17 w18 w19 w20] do |tag, css_class| %>
<div class="item_wrap">
		<span class="tag_name"> <p> <%= Post.tagged_with(tag).count - 1 %> other people agree </p> </span>
		<div class="<%= "item #{css_class}" %> ">
			<%= content_tag :p, tag.name %>
		</div>

</div>
		<% end %>


	<% if Obscenity.profane?(@new_post) %>
		<!-- <div class="no-bad"><p>Let's keep it positive!</p></div> -->
	<% else %>
		<% @posts.each do |post| %>
			<% if post.new_post %>

				<div class="item_wrap">
					<div class="item newly_created">
					<span class="tag_name"> <%=post.new_post %></span>
					</div>
				</div>
			<% else %>
			<% end %>
	<%end %>

<% end %>
	

</div>

</section>


